{
  "name": "ssh2-exec",
  "version": "0.7.3",
  "description": "Transparent use of `child_process.exec` and `ssh2.prototype.exec`",
  "keywords": [
    "child process",
    "exec",
    "ssh2",
    "ssh"
  ],
  "homepage": "https://github.com/adaltas/node-ssh2-exec",
  "license": "BSD-3-Clause",
  "author": "David Worms <david@adaltas.com>",
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    }
  },
  "contributors": [],
  "engines": {
    "node": ">=0.10.1"
  },
  "main": "./lib/index",
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should",
      "coffeescript/register"
    ],
    "timeout": 40000,
    "reporter": "spec",
    "recursive": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-ssh2-exec.git"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/cz-commitlint": "^16.2.1",
    "coffeescript": "^2.6.1",
    "husky": "^7.0.4",
    "mocha": "^9.2.1",
    "mocha-they": "^0.1.3",
    "should": "^13.2.3",
    "ssh2-connect": "^3.2.2",
    "standard-version": "^9.3.2"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js"
    },
    "./promise": {
      "require": "./lib/promise.js"
    }
  },
  "optionalDependencies": {},
  "scripts": {
    "build": "coffee -b -o lib src",
    "publish": "git push --follow-tags origin master && npm publish",
    "prepare": "husky install",
    "pretest": "npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "test": "mocha 'test/**/*.coffee'"
  }
}
